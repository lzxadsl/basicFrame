<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.frame.authority.dao.IRoleDao">
	<!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> -->
	<select id="selectList" resultType="User" parameterType="map">  
        SELECT 
			*
 		FROM sys_role where 1=1 ${where}
	</select> 
	
	<select id="get" parameterType="string" resultType="Role">
	    select * from sys_role where id = #{id}
	</select>
	
	<update id="update">
	    update sys_role 
		    set name = #{name}
		where id = #{id}
	</update>
	
	<insert id="insert" parameterType="Role" keyProperty="id">
	    insert into sys_role(
	    	name
	    )  values(
	    	#{name}
	    )
		<selectKey keyProperty="id" resultType="String" order="AFTER">  
	        select max(id) from sys_role
	    </selectKey> 
	</insert>
	
</mapper>	
